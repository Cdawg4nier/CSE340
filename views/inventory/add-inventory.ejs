<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <% messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>

                    <form action="/inv/newinv" method="post">
                        <label for="inv_make">Vehicle Make*</label>
                        <input type="text" id="inv_make" name="inv_make" required value=<%=locals.inv_make%>>

                        <label for="inv_model">Vehicle Model*</label>
                        <input type="text" id="inv_model" name="inv_model" required value=<%=locals.inv_model%>>

                        <label for="inv_year">Vehicle Year*</label>
                        <input type="text" id="inv_year" name="inv_year" pattern="^\d{4}$" required
                            value=<%=locals.inv_year%>>
                        <p>This value should only contain 4 digits</p>

                        <label for="inv_description">Description*</label>
                        <textarea id="inv_description" name="inv_description" rows="4" cols="50" required
                            placeholder="A description of your vehicle here"
                            value=<%=locals.inv_description%>></textarea>

                        <label for="inv_image">Vehicle Image Location*</label>
                        <input type="text" id="inv_image" name="inv_image" placeholder="/images/no-image.png" required
                            value=<%=locals.inv_image%>>

                        <label for="inv_thumbnail">Vehicle Thumbnail Location*</label>
                        <input type="text" id="inv_thumbnail" name="inv_thumbnail" placeholder="/images/no-image-tn.png"
                            required value=<%=locals.inv_thumbnail%>>

                        <label for="inv_price">Vehicle Price*</label>
                        <input type="text" id="inv_price" name="inv_price" pattern="^\d{1,9}$" required
                            value=<%=locals.inv_price%>>
                        <p>This value should contain only numbers, no decimal</p>

                        <label for="inv_miles">Vehicle Miles*</label>
                        <input type="text" id="inv_miles" name="inv_miles" pattern="^\d{1,9}$" required
                            value=<%=locals.inv_miles%>>
                        <p>This value should contain only numbers</p>

                        <label for="inv_color">Vehicle Color*</label>
                        <input type="text" id="inv_color" name="inv_color" required value=<%=locals.inv_color%>>

                        <%- classDropdown %>

                            <button type="submit" id="addInventoryButton">Add Vehicle to Inventory</button>
                    </form>
                    <script src="/js/script.js"></script>